// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  rawId     String   @unique
  lastLogin DateTime @default(now())
  createdAt DateTime @default(now())
  name      String
  admin     Boolean  @default(false)
  // A user can have many guilds.
  guilds    Guild[]
}

model Guild {
  id                   Int        @id @default(autoincrement())
  rawId                String     @unique
  // A guild can have many messages
  messages             Message[]
  channelId            String
  channelName          String
  name                 String
  // A user can have many guilds. A guild can only have one user.
  user                 User       @relation(fields: [userId], references: [id])
  userId               Int
  sendBirthdayMessages Boolean    @default(false) // Determines if the birthday feature is enabled or not.
  birthdays            Birthday[]
  birthdayChannelId    String?    // The channel ID where birthday messages will be sent.
}

model Message {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  rawId       String?    @unique
  guild       Guild      @relation(fields: [guildId], references: [id])
  guildId     Int
  // This is the title subject of the role reactions.
  subject     String
  description String?
  // Messages can have many reactions
  reactions   Reaction[]
}

// Reaction (aka Reaction Message)
model Reaction {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  emoteId   String
  roleId    String
  roleName  String
  // All reactions have one message.
  message   Message  @relation(fields: [messageId], references: [id])
  messageId Int
}

model Birthday {
  @@unique([userId, guildId])
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    String
  username  String
  guild     Guild    @relation(fields: [guildId], references: [id])
  guildId   Int
  day       Int
  month     Int
  timezone  String
}
